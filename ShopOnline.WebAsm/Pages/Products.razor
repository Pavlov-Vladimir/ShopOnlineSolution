@page "/"

@inherits ProductsBase

@if (Products is null)
{
    <h3>Loading products...</h3>
    <DisplaySpinner />
}
else
{
    <h3 class="mb-5">Products</h3>

    int productCount = Products.Count();

    @if (productCount > 0)
    {
        const int PRODUCTS_QTY_TO_SHOW = 4;

        @foreach (var productsGroup in GetGroupedProductsByCategory())
        {
            <h4>@GetCategoryName(productsGroup)</h4>

            <div class="row mt-3">
                <DisplayProducts Products="@productsGroup.Take(PRODUCTS_QTY_TO_SHOW)" />
            </div>
            <hr class="mb-3" />
        }
    }
}
