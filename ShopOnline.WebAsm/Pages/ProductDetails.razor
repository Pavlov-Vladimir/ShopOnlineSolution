@page "/ProductDetails/{Id:int}"

@if (Product is null && ErrorMassege is null)
{
    <h3>Loading product details...</h3>
    <DisplaySpinner />
}
else if (ErrorMassege is not null)
{
    <DisplayError ErrorMassege="@ErrorMassege" />
}
else
{
    <h3 class="mb-5">Product Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Product.ImageURL" />
        </div>
        <div class="col-md-6">
            <h3>@Product.Name</h3>
            <p class="mb-4">@Product.Description</p>
            <p class="mb-4">
                <b>$@Product.Price (@Product.Qty items in stock)</b>
            </p>
            <div>
                <button class="btn btn-success" @onclick="() =>
                    (AddToCart_Click(new CartItemToAddDto{
                        CartId = HardCoded.CartId,
                        ProductId = Product.Id,
                        Qty = 1
                    }))">
                    <b>Add To Cart</b>
                </button>
            </div>
        </div>
    </div>
}